<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">
                <div class="form-group">
                    <label for="nameTextField">Workout Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the event name"
                    name="name" 
                    value="<%= Event.name%>" required>
                </div>
                <div class="form-group">
                    <label for="organizerTextField">Event Organizer</label>
                    <input type="text" class="form-control"
                    id="organizerTextField"
                    placeholder="Enter the event organizer"
                    name="organizer" 
                    value="<%= Event.organizer%>" required>
                </div>
                <div class="form-group">
                    <label for="dateTextField"> Date</label>
                    <input type="date" class="form-control"
                    id="dateTextField"
                    placeholder="Select the event date"
                    name="date"
                    value="<%= Event.date%>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Event Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the description of the event"
                    name="description" required>
<%= Event.description%></textarea> </div>
                <div class="form-group">
                    <label for="locationTextField">Event Location</label>
                    <input type="text" class="form-control"
                    id="locationTextField"
                    placeholder="Enter the event location"
                    name="location" 
                    value="<%= Event.location%>" required>
                </div>
                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>
                <a href="/events" class="btn btn-warning"> <i class="fas fa-undo"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
<%- include ../partials/footer.ejs %>